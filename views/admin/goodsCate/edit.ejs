<%- include ('../public/page_header.ejs') %>

    <div class="container-fluid">
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-heading">
                    修改商品分类
                </div>
                <div class="panel-body">
                    <div class="table-responsive input-form">
                        <form action="/<%=config.adminPath%>/goodsCate/doEdit?id=<%=cateItem._id%>" method="POST" enctype="multipart/form-data">
                            <ul>
                                <li> 分类名称: <input type="text" name="title" value="<%=cateItem.title%>" /></li>
                                <li>
                                    上级分类:
                                    <select name="pid" id="cate_id">
                                        <option value="0">---顶级分类---</option>
                                        <%for(let i = 0; i < cateList.length; i++){%>
                                            <option value="<%=cateList[i]._id%>" <%if(cateList[i]._id.toString()==cateItem.pid.toString()){%> selected <%}%>><%=cateList[i].title%></option>
                                        <%}%>
                                    </select>
                                </li>
                                <li>
                                    分类图片:
                                    <input type="file" name="img_file">

                                    <img src="<%=cateItem.cate_img%>" alt="" width="200">
                                </li>
                                <li> 跳转地址: <input type="text" name="link" value="<%=cateItem.link%>" /></li>
                                <li> 分类模板: <input type="text" name="template" value="<%=cateItem.template%>" /></li>
                                <li> SEO标题: <input type="text" name="sub_title" value="<%=cateItem.sub_title%>" /></li>
                                <li> SEO关键字: <input type="text" name="keywords" value="<%=cateItem.keywords%>" /></li>
                                <li> SEO描述: <input type="text" name="description" value="<%=cateItem.description%>" /></li>
                                <li> 排序: <input type="text" name="sort" value="100" value="<%=cateItem.sort%>" /></li>
                                <li>
                                    <br />
                                    <button type="submit" class="btn btn-default">提交</button>
                                </li>
                            </ul>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    </body>

    </html>