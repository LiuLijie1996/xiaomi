<%- include ('../public/page_header.ejs') %>

    <div class="container-fluid">
        <div class="row">
            <!-- 列表展示 -->
            <div class="table-responsive">

                <span>
                    类型---<%=goodsTypeItem.title%>
                </span>

                <a class="btn" href="/<%=config.adminPath%>/goodsTypeAttribute/add?id=<%=goodsTypeItem._id%>">增加商品类型属性</a>

                <table class="table table-bordered">
                    <thead>
                        <tr class="th">
                            <th>属性名称</th>
                            <th>商品类型</th>
                            <th>属性值的录入方式</th>
                            <th>可选值列表</th>
                            <th>增加时间</th>
                            <th>状态</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%for(let i = 0; i < goodsTypeAttribute.length; i++) {%>
                            <tr>
                                <td>
                                    <%=goodsTypeAttribute[i].title%>
                                </td>
                                <td>
                                    <%=goodsTypeItem.title%>
                                </td>
                                <td>
                                    <%=goodsTypeAttribute[i].attr_type%>
                                </td>
                                <td>
                                    <%=goodsTypeAttribute[i].attr_value%>
                                </td>
                                <td>
                                    <%=helper.moment(goodsTypeAttribute[i].add_time)%>
                                </td>
                                <td>
                                    <%=goodsTypeAttribute[i].status%>
                                </td>
                                <td class="text-center">
                                    <a target="rightView" href="/<%=config.adminPath%>/goodsTypeAttribute/edit?id=<%=goodsTypeAttribute[i]._id%>">修改</a>
                                    <a class="delete" href="/<%=config.adminPath%>/goodsTypeAttribute/delete?id=<%=goodsTypeAttribute[i]._id%>">删除</a>
                                </td>
                            </tr>
                        <%}%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    </body>

    </html>