<%- include ('../public/page_header.ejs') %>

    <div class="container-fluid">
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-heading">
                    修改权限
                </div>
                <div class="panel-body">
                    <div class="table-responsive input-form">
                        <form action="/<%=config.adminPath%>/access/doEdit?id=<%=item._id%>" method="post">
                            <ul>
                                <li> 模块名称: <input type="text" name="module_name" value="<%=item.module_name%>" /></li>
                                <li>
                                    节点类型:
                                    <select name="type" id="type">
                                        <option value="1" <%if(item.type==1){%>selected<%}%>>模块</option>
                                        <option value="2" <%if(item.type==2){%>selected<%}%>>菜单</option>
                                        <option value="3" <%if(item.type==3){%>selected<%}%>>操作</option>
                                    </select>
                                </li>
                                <li> 操作名称: <input type="text" name="action_name" value="<%=item.action_name%>" /></li>
                                <li> 操作地址: <input type="text" name="url" value="<%=item.url%>" /></li>
                                <li>
                                    所属模块:
                                    <select name="module_id" id="module_id">
                                        <option value="0" <%if(item.module_id==0){%>selected<%}%>>---顶级模块---</option>
                                        <%for(let i=0; i<moduleList.length; i++){%>
                                        <option value="<%=moduleList[i]._id%>" <%if(item.module_id.toString()==moduleList[i]._id.toString()){%>selected<%}%>><%=moduleList[i].module_name%></option>
                                        <%}%>
                                    </select>
                                </li>

                                <li>
                                    排序: <input type="text" name="sort" value="100">
                                </li>

                                <li>
                                    <br />
                                    <button type="submit" class="btn btn-default">提交</button>
                                </li>
                            </ul>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    </body>

    </html>