<%- include ('../public/page_header.ejs') %>

    <div class="container-fluid">
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-heading">
                    搜索
                </div>
                <div class="panel-body">
                    <form action="/<%=config.adminPath%>/role%>" role="form" class="form-inline" method="GET">
                        <div class="form-group">
                            <label for="name">名称</label>
                            <input type="text" class="form-control" id="name" name="title" placeholder="请输入名称">
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-default">开始搜索</button>
                        </div>
                    </form>
                </div>
            </div>
            <!--
            列表展示
        -->
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr class="th">
                            <th>角色名称</th>
                            <th>角色描述</th>
                            <th>添加时间</th>
                            <th class="text-center">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%for(let i=0; i<roleList.length; i++){%>
                            <tr>
                                <td>
                                    <%=roleList[i].title%>
                                </td>
                                <td>
                                    <%=roleList[i].description%>
                                </td>
                                <td>
                                    <%=helper.moment(roleList[i].add_time)%>
                                </td>
                                <td class="text-center">
                                    <a target="rightView" href="/<%=config.adminPath%>/role/auth?id=<%=roleList[i]._id%>">授权</a>
                                    <a target="rightView" href="/<%=config.adminPath%>/role/update?id=<%=roleList[i]._id%>">修改</a>
                                    <a class="delete" href="/<%=config.adminPath%>/role/delete?id=<%=roleList[i]._id%>">删除</a>
                                </td>
                            </tr>
                            <%}%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    </body>

    </html>