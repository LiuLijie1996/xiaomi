<%- include ('../public/page_header.ejs') %>

    <div class="container-fluid">
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-heading">
                    修改管理员
                </div>
                <div class="panel-body">
                    <div class="table-responsive input-form">
                        <form action="/<%=config.adminPath%>/manager/doEdit" method="post">
                            <ul>
                                <input type="text" name="_id" value="<%=adminItem._id%>" style="display: none;">
                                <li> 管理员名称: <input type="text" readonly name="username" value="<%=adminItem.username%>" /></li>
                                <li> 管理员密码: <input type="text" name="password" /></li>
                                <li> 管理员电话: <input type="text" name="phone" value="<%=adminItem.phone%>" /></li>
                                <li> 管理员邮箱: <input type="text" name="email" value="<%=adminItem.email%>" /></li>
                                <li>
                                    管理员角色:
                                    <select name="role_id">
                                        <%for(let i=0; i<roleList.length; i++){%>
                                            <%if(adminItem.role_id && roleList[i]._id.toString() === adminItem.role_id.toString()){%>
                                                <option selected value="<%=roleList[i]._id%>"><%=roleList[i].title%></option>
                                            <%}else{%>
                                                <option value="<%=roleList[i]._id%>"><%=roleList[i].title%></option>
                                            <%}%>
                                        <%}%>
                                    </select>
                                </li>
                                <li>
                                    <br />
                                    <button type="submit" class="btn btn-default">提交</button>
                                </li>
                            </ul>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    </body>

    </html>