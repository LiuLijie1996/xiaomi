<%- include ('../public/page_header.ejs') %>

    <div class="container-fluid">
        <div class="row">
            <!-- 列表展示 -->
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr class="th">
                            <th>商品分类名称</th>
                            <th>时间</th>
                            <th>状态</th>
                            <th class="text-center">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%for(let i=0; i<goodsTypeList.length; i++){%>
                            <tr>
                                <td>
                                    <%=goodsTypeList[i].title%>
                                </td>
                                <td>
                                    <%=helper.moment(goodsTypeList[i].add_time)%>
                                </td>
                                <td>
                                    <%if(goodsTypeList[i].status===1){%>
                                        <img src="/admin/images/yes.gif" onclick="page.updateKey({
                                            ele: this, 
                                            model: 'goodsTypeService', 
                                            id: '<%=goodsTypeList[i]._id%>',
                                            key: 'status',
                                            value: 2,
                                        })">
                                        <%}else{%>
                                            <img src="/admin/images/no.gif" onclick="page.updateKey({
                                            ele: this, 
                                            model: 'goodsTypeService', 
                                            id: '<%=goodsTypeList[i]._id%>',
                                            key: 'status',
                                            value: 1,
                                        })">
                                            <%}%>
                                </td>
                                <td>
                                    <a target="rightView"
                                        href="/<%=config.adminPath%>/goodsTypeAttribute?id=<%=goodsTypeList[i]._id%>">属性列表</a>
                                    <a target="rightView"
                                        href="/<%=config.adminPath%>/goodsType/edit?id=<%=goodsTypeList[i]._id%>">修改</a>
                                    <a class="delete"
                                        href="/<%=config.adminPath%>/goodsType/delete?id=<%=goodsTypeList[i]._id%>">删除</a>
                                </td>
                            </tr>
                            <%}%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    </body>

    </html>