<%- include ('../public/page_header.ejs') %>

    <div class="container-fluid">
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-heading">
                    增加轮播图
                </div>
                <div class="panel-body">
                    <div class="table-responsive input-form">
                        <form action="/<%=config.adminPath%>/focus/doEdit?id=<%=focusItem._id%>" method="POST" enctype="multipart/form-data">
                            <ul>
                                <li>
                                    分类:
                                    <select name="type" id="type">
                                        <option value="1" <%if(focusItem.type == '1'){%> selected <%}%>>网站</option>
                                        <option value="2" <%if(focusItem.type == '2'){%> selected <%}%>>APP</option>
                                        <option value="3" <%if(focusItem.type == '3'){%> selected <%}%>>小程序</option>
                                    </select>
                                </li>
                                <li> 名称: <input type="text" name="title" value="<%=focusItem.title%>" /></li>
                                <li> 跳转地址: <input type="text" name="url" value="<%=focusItem.url%>" /></li>
                                <li>
                                    轮播图:
                                    <input type="file" name="img_file">
                                </li>
                                <li style="margin: 20px 0;">
                                    <img src="<%=focusItem.imgUrl%>" alt="" width="200">
                                </li>
                                <li>
                                    排序: <input type="text" name="sort" value="<%=focusItem.sort%>">
                                </li>

                                <li>
                                    <br />
                                    <button type="submit" class="btn btn-default">提交</button>
                                </li>
                            </ul>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    </body>

    </html>